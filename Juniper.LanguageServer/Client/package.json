{
    "name": "juniper-client",
    "displayName": "Juniper Client",
    "description": "Juniper LSP client",
    "publisher": "ripseiko",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:juniper"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "juniper",
                "extensions": [
                    ".jun"
                ]
            }
        ],
        "configurationDefaults": {
            "juniper": {
                "editor.semanticHighlighting.enabled": true
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "typescript": "^5.1.3"
    },
    "devDependencies": {
        "@types/node": "^8.10.25",
        "@types/vscode": "^1.1.34",
        "vscode-jsonrpc": "^4.0.0",
        "vscode-languageclient": "8.1.0"
    }
}
